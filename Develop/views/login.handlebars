<div class="login-container">
  <!-- login user form -->
  <div class='login-dark'>
    <form class='login-form' method='post'>
      <h2 class='sr-only'>Login</h2>
      <div class='illustration'>
        <i class='icon ion-ios-locked-outline'></i>
      </div>
      <div class='form-group'>
        <input class='form-control' type='email' name='email' placeholder='Email' id='login-email' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='password' name='password' placeholder='Password' id='login-password' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary btn-block' type='submit'>
          Log In
        </button>
      </div>
    </form>
  </div>
  <!-- create user form -->
  <div class='login-dark'>
    <form class='signup-form' method='post'>
      <h2 class='sr-only'>Create Account</h2>
      <div class='illustration'>
        <i class='icon ion-ios-locked-outline'></i>
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='state' placeholder='State' id='create-state' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='zip' placeholder='Zip Code' id='create-zip' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='city' placeholder='City' id='create-city' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='username' placeholder='Username' id='create-username' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='email' name='email' placeholder='Email' id='create-email' />
      </div>
      <div class='form-group'>
        <input class='form-control' type='password' name='password' placeholder='Password' id='create-password' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary btn-block' type='submit'>
          Create Account
        </button>
      </div>
    </form>
  </div>
</div>